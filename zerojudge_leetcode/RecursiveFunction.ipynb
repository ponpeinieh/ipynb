   "source": [
    "# define a recursive function to calculate n! (factorial)\n",
    "def factorial(n):\n",
    "    # terminating logic\n",
    "    if n==1:\n",
    "        return 1\n",
    "    # recursive logic\n",
    "    return n*factorial(n-1)\n",
    "\n",
    "# 5! = 5*4*3*2*1 = 120\n",
    "n = 5\n",
    "print(factorial(n))"
   ]
  }
